   "source": [
    "# decorator 없이 사용하기\n",
    "def hello():\n",
    "    print(\"hello\")\n",
    "    \n",
    "def add_print(original):\n",
    "    def wrapper():\n",
    "        print(\"함수시작\")\n",
    "        original()\n",
    "        print(\"함수 끝\")\n",
    "    return wrapper\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "0020c0e2",
   "metadata": {},
   "outputs": [],
