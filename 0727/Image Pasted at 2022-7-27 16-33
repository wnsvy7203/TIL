   "metadata": {},
   "outputs": [],
   "source": [
    "# 데코레이터 함수를 이용한 예\n",
    "import datetime\n",
    "def calc_time(original):\n",
    "    def wrapper():\n",
    "        print(datetime.datetime.now())\n",
    "        original()\n",
    "        print(datetime.datetime.now())\n",
    "    return wrapper\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "9c3b37e8",
   "metadata": {},
   "outputs": [],
   "source": [
    "@calc_time\n",
    "def calc_for():\n",
    "    list1 = []\n",
    "    for i in range(100000000):\n",
    "        list1.append(i)\n",
    "    "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "8a5493ef",
   "metadata": {},
   "outputs": [],
   "source": [
    "@calc_time\n",
    "def calc_comprehension():\n",
    "    list1 = [ i for i in range(100000000)]\n",
    "    "
   ]
  },
